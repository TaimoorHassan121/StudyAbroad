@model Study_Abroad.Models.Disipline

@{ ViewData["Title"] = "Create";
    Layout = "_layout1"; }



<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">

        <div class="content-body">

            <!-- Zero configuration table -->
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card col-6 offset-3">

                            <div class="card-body card-dashboard">

                                <div class="table-responsive">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="DisiplineName" class="control-label"></label>
                                            <input asp-for="DisiplineName" class="form-control" />
                                            <span asp-validation-for="DisiplineName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="DateTime" class="control-label"></label>
                                            <input name="DateTime" class="form-control" value="@DateTime.Now" />
                                            <span asp-validation-for="DateTime" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Status
                                            </label>
                                            <select asp-for="Status" class="form-control">
                                                <option value="True">True</option>
                                                <option value="False">False</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Zero configuration table -->

        </div>
    </div>
</div>
<!-- END: Content-->
