@model Study_Abroad.Models.Country

@{ ViewData["Title"] = "Create";
    Layout = "_Layout1"; }



<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-wrapper">

        <div class="content-body">

            <!-- Zero configuration table -->
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card col-6 offset-3">

                            <div class="card-body card-dashboard">

                                <div class="table-responsive">
                                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="CountryName" class="control-label"></label>
                                            <input asp-for="CountryName" class="form-control" />
                                            <span asp-validation-for="CountryName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @*<label asp-for="ProfilePicture" class="control-label"></label>*@
                                            <input name="Images" class="form-control" type="file" />
                                            @*<span asp-validation-for="ProfilePicture" class="text-danger"></span>*@
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="DateTime" class="control-label"></label>
                                            <input name="DateTime" class="form-control" value="@DateTime.Now" />
                                            <span asp-validation-for="DateTime" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Status
                                            </label>
                                            <select asp-for="Status" class="form-control">
                                                <option value="true">Active</option>
                                                <option value="false">Deactive</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Zero configuration table -->

        </div>
    </div>
</div>
<!-- END: Content-->
