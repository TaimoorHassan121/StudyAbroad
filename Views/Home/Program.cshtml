@model Study_Abroad.Models.Course
@using Study_Abroad.Data
@inject StudyAbroadContext _db
@{
    ViewData["Title"] = "AllProgram";
    Layout = "_StudyAbroadLayout2";
}
@section CSS{
    <link rel="stylesheet" type="text/css" href="~/study-abroad/css/total-programs.css">
}
<main>
    <!-- ===== Header Section 2 Start ===== -->
    <section class="program-header-section-2">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left">
                        <div id="header-content">
                            <h1 class="header-heading">@Model.CourseName</h1>
                            <div class="row">
                                <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                                    <p class="header-text">
                                        At <a href="/Home/University/@Model.Campuses.UniversityId">@Model.Campuses.Universities.UniversityName</a> <img src="@(string.IsNullOrEmpty(Model.Campuses.Universities.UniversityIcon)?"/study-abroad/img/t-level-img-2.png":"/Images/"+Model.Campuses.Universities.UniversityIcon)">
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ===== Header Section 2 End ===== -->
    <section class="main-section-1 program-main-section-1">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item item-1">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button item-1" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Overview
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Model.CourseOverview</p>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Learning Outcomes
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Model.CourseLearningOutcome</p>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        Start Dates And Prices
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Model.CourseStartDateAndPrice</p>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingFour">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        How To Apply
                                    </button>
                                </h2>
                                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Model.CourseHowToApply</p>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item item-5">
                                <h2 class="accordion-header" id="headingFive">
                                    <button class="accordion-button collapsed item-5" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                        Reviews And Rankings
                                    </button>
                                </h2>
                                <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p>@Model.CourseReviewAndRanking</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-lg-4 col-md-4 col-sm-12 col-12">

                        <div class="card program-side-card">
                            <div class="box">
                                <div class="card-body" style="margin-top: 2rem;">
                                    <div class="img">
                                        <img src="~/study-abroad/img/cd_location.png" alt="Location">
                                    </div>
                                    <div class="card-detail">
                                        <h5 class="card-title">Location</h5>
                                        <p class="card-text">@Model.States.StateName</p>
                                    </div>
                                </div>
                                @*<div class="card-body" style="padding-top: 5px; padding-bottom: 5px;">
                                        <div class="img">
                                            <img src="~/study-abroad/img/school-outline.png" alt="Location">
                                        </div>
                                        <div class="card-detail">
                                            <h5 class="card-title">Qualification</h5>
                                            <p class="card-text d-block">@Model.Qu</p>
                                        </div>
                                    </div>*@
                                <div class="card-body" style="padding-top: 5px; padding-bottom: 5px;">
                                    <div class="img">
                                        <img src="~/study-abroad/img/Group 3476.png" alt="Location">
                                    </div>
                                    <div class="card-detail">
                                        <h5 class="card-title">Fees</h5>
                                        <p class="card-text">@Model.CourseTutionFee</p>
                                    </div>
                                </div>
                                <div class="card-body" style="padding-top: 5px; padding-bottom: 5px;">
                                    <div class="img">
                                        <img src="~/study-abroad/img/time-outline.png" alt="Location">
                                    </div>
                                    <div class="card-detail">
                                        <h5 class="card-title">Duration</h5>
                                        <p class="card-text">@Model.CourseDuration</p>
                                    </div>
                                </div>
                                <div class="card-body" style="padding-top: 5px; padding-bottom: 5px;">
                                    <div class="img">
                                        <img src="~/study-abroad/img/calendar_blue.png" alt="Location">
                                    </div>
                                    <div class="card-detail">
                                        <h5 class="card-title">Next intake</h5>
                                        <p class="card-text">@Model.CourseIntake</p>
                                    </div>
                                </div>
                                @*<div class="card-body" style="margin-bottom: 2rem;">
                                        <div class="img">
                                            <img src="~/study-abroad/img/tick_blue.png" alt="Location">
                                        </div>
                                        <div class="card-detail">
                                            <h5 class="card-title">Entry score</h5>
                                            <p class="card-text">6.0 IELTS</p>
                                        </div>
                                    </div>*@
                            </div>
                            <div class="card-btn">
                                <a href="#">Apply Now</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="main-section-2 program-main-section-2">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-left">
                        <h1 class="programs-heading">More Programs</h1>
                        <p class="programs-text">From this institute</p>
                    </div>
                </div>
            </div>
            <div class="container mb-5">
                <div class="row">
                    <div class="owl-carousel owl-theme">
                        @foreach (var item in _db.Courses.Where(a => a.Campuses.UniversityId == Model.Campuses.UniversityId && a.CourseId != Model.CourseId).ToList())
                        {
                            <div class="item">
                                <div class="card ">
                                    <div class="card-body" style="cursor:pointer" onclick="onProgramById(@item.CourseId)">
                                        <div class="title w-100 ">
                                            <h5 class="card-text">@item.CourseName</h5>
                                        </div>
                                        <div class="links">
                                            <div class="col-12">
                                                <a href="" class="fee-heading">TUITION FEE</a><br>
                                                <a href="" class="fee">@item.CourseTutionFee</a>
                                            </div>
                                            @*<div class="w-51">
                                                    <a href="" class="fee-heading">APPLICATION FEE</a><br>
                                                    <a href="" class="fee">Free</a>
                                                </div>*@
                                        </div>
                                    </div>

                                </div>
                            </div>

                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<!-- ===== Main Section End ===== -->
@section Script{
    <script>
        $(document).ready(function () {
            $(".owl-carousel").owlCarousel({
                loop: false,
                margin: 10,
                nav: false,
                dots: false,
                responsive: {
                    0: {
                        items: 1,
                    },
                    600: {
                        items: 1,
                    },
                    1000: {
                        items: 2,
                    },
                    1400: {
                        items: 3,
                    },
                },
            });
        });
        function onProgramById(id) {
            var url = "/Home/Program/" + id;
            window.location.href = url;
            //console.log(url)
        }
    </script>

    <!-- ===== Bootstrap JS ===== -->
    <script src="~/study-abroad/js/bootstrap.bundle.min.js"></script>
}