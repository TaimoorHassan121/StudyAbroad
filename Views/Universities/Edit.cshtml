@model Study_Abroad.Models.University

@{ ViewData["Title"] = "Edit";
    Layout = "_Layout1"; }




<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">

        <div class="content-body">

            <!-- Zero configuration table -->
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card">

                            <div class="card-body card-dashboard">

                                <div class="table-responsive">
                                    <form asp-action="Edit">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" name="UniversityId" id="UniversityId" value="" />
                                        <div class="row col-12">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="UniversityName" class="control-label"></label>
                                                    <input asp-for="UniversityName" class="form-control" />
                                                    <span asp-validation-for="UniversityName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="DateTime" class="control-label"></label>
                                                    <input name="DateTime" class="form-control" value="@DateTime.Now" />
                                                    <span asp-validation-for="DateTime" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row col-12">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">Country Name</label>
                                                    <select asp-for="CountryId" asp-items="ViewBag.CountryId" class="form-control"></select>
                                                    <span asp-validation-for="CountryId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">State Name</label>
                                                    <select asp-for="StateId" asp-items="ViewBag.StateId" class="form-control"></select>
                                                    <span asp-validation-for="StateId" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row col-12">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">School Type</label>
                                                    <select asp-for="SchoolType" asp-items="Html.GetEnumSelectList<School>()" class="form-control">                                               
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        Status
                                                    </label>
                                                    <select asp-for="Status" class="form-control">
                                                        <option value="True">True</option>
                                                        <option value="False">False</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                    <div>
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Zero configuration table -->

        </div>
    </div>
</div>



<script>

    var University = @Html.Raw(Json.Serialize(Model))

        document.getElementById("UniversityId").value = University.UniversityId;

</script>




<!-- END: Content-->
