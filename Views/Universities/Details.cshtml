@model Study_Abroad.Models.University

@{ ViewData["Title"] = "Details";
    Layout = "_Layout1"; }

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">

        <div class="content-body">

            <!-- Zero configuration table -->
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card">

                            <div class="card-body card-dashboard">

                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.UniversityName)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.UniversityName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.DateTime)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.DateTime)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => Model.Countries.CountryName)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => Model.Countries.CountryName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => Model.States.StateName)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => Model.States.StateName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @if (Model.Status == true)
                                        {
                            @Html.Raw("Active") }
                        else
                        {
            @Html.Raw("Deactive")}
                                    </dd>
                                </dl>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@Model.UniversityId">Edit</a> |
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Zero configuration table -->
        </div>
    </div>
</div>
<!-- END: Content-->
